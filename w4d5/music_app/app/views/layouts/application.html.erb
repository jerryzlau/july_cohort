<!DOCTYPE html>
<html>
  <head>
    <title>Music App</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <header>
      <% if current_user %>
        <%= current_user.email %>
        <%= button_to 'log out', session_url, method: :delete %>
      <% else %>
        <%= link_to 'Sign in', new_session_url %>
        <%= link_to 'Sign up', new_user_url %>
      <% end %>
    </header>
    <%= yield %>
  </body>
</html>
